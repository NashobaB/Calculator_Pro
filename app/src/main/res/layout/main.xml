<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <Button
        android:id="@+id/button_one"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_dot"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:text="1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_zero"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:layout_toEndOf="@+id/button_one"
        android:contextClickable="true"
        android:text="2"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="3"
        android:layout_alignTop="@+id/button_two"
        android:layout_toEndOf="@+id/button_two"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_four"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_one"
        android:layout_alignParentStart="true"
        android:text="4"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_five"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/button_four"
        android:layout_toEndOf="@+id/button_four"
        android:text="5"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_six"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/button_five"
        android:layout_toEndOf="@+id/button_five"
        android:text="6"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_seven"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_four"
        android:layout_alignParentStart="true"
        android:text="7"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_eight"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_five"
        android:layout_toEndOf="@+id/button_seven"
        android:text="8"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_nine"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_six"
        android:layout_toEndOf="@+id/button_eight"
        android:text="9"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_dot"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="."
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_zero"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/button_dot"
        android:layout_toEndOf="@+id/button_dot"
        android:text="0"
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_equals"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/button_zero"
        android:layout_toEndOf="@+id/button_zero"
        android:text="="
        android:layout_margin="0dp"
        android:background="@color/colorNumBG"
        android:textColor="@color/colorNumText"
        android:contextClickable="true"
        android:padding="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/button_nine"
        android:layout_alignTop="@+id/button_nine">

        <Button
            android:id="@+id/button_c"
            android:layout_width="match_parent"
            android:layout_height="56.66dp"
            android:layout_alignParentEnd="true"
            android:text="C"
            android:layout_margin="0dp"
            android:background="#dce2e2"
            android:textColor="@color/colorActionsText"
            android:contextClickable="true"
            android:padding="0dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/button_divide"
            android:layout_width="match_parent"
            android:layout_height="56.66dp"
            android:layout_below="@+id/button_c"
            android:text="/"
            android:layout_margin="0dp"
            android:background="@color/colorActionsBG"
            android:textColor="@color/colorActionsText"
            android:contextClickable="true"
            android:padding="0dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="match_parent"
            android:layout_height="56.66dp"
            android:layout_below="@+id/button_divide"
            android:text="X"
            android:layout_margin="0dp"
            android:background="@color/colorActionsBG"
            android:textColor="@color/colorActionsText"
            android:contextClickable="true"
            android:padding="0dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/button_minus"
            android:layout_width="match_parent"
            android:layout_height="56.66dp"
            android:layout_below="@+id/button_multiply"
            android:text="-"
            android:layout_margin="0dp"
            android:background="@color/colorActionsBG"
            android:textColor="@color/colorActionsText"
            android:contextClickable="true"
            android:padding="0dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button_minus"
            android:layout_margin="0dp"
            android:background="@color/colorActionsBG"
            android:textColor="@color/colorActionsText"
            android:contextClickable="true"
            android:padding="0dp"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_seven"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number|numberDecimal"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="120px"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>